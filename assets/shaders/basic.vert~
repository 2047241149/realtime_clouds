#version 330 core
in vec3 position;
in vec3 color;
in vec3 texCoords;
in mat4 model;

out vec3 ourColor;
out vec3 TexCoords;

uniform mat4 MVPM;

void main()
{

    gl_Position = vec4(position, 1.0);//MVPM * model * vec4(position, 1.0f);
    ourColor = color;
    TexCoords = texCoords;
}
